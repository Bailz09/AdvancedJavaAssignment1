<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.advancedjavaassignment1.GraphViewController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="340.0" layoutY="139.0" prefHeight="800.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="TOP_LEFT" text="Most Streamed Songs on Spotify 2023" />
            <BarChart fx:id="barChart" title="Most Streamed Songs on Spotify 2023">
              <xAxis>
                <CategoryAxis label="Songs" side="BOTTOM" tickLabelRotation="90.0" />
              </xAxis>
              <yAxis>
                <NumberAxis label="Number of Streams" minorTickVisible="false" prefHeight="360.0" prefWidth="49.0" side="LEFT" />
              </yAxis>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
               </VBox.margin>
            </BarChart>
            <RadioButton fx:id="mostStreamedButton" mnemonicParsing="false" onAction="#toggle" text="Most Streamed">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton fx:id="leastStreamedButton" mnemonicParsing="false" onAction="#toggle" text="Least Streamed" />
            <Button mnemonicParsing="false" text="View Table">
               <VBox.margin>
                  <Insets top="70.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
